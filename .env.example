# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# (Currently using SQLite, but you can configure PostgreSQL/MySQL here)
# DATABASE_URL=postgresql://user:password@localhost:5432/radth_doctor

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Email Configuration (for OTP and notifications)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production, use SMTP:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# AI Symptom Checker Configuration
# Set to 'true' to use OpenAI GPT for symptom analysis
# If false or not set, will use rule-based analysis
USE_OPENAI_AI=false

# OpenAI API Key (required if USE_OPENAI_AI=true)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI Model Configuration (optional)
# Default: gpt-4o-mini (cost-effective)
# Options: gpt-4o-mini, gpt-4o, gpt-4-turbo
# OPENAI_MODEL=gpt-4o-mini
